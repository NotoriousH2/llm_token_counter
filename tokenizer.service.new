[Unit]
Description=LLM Token Counter FastAPI Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/llm_token_counter
Environment="PATH=/home/ubuntu/llm_token_counter/venv/bin"
Environment="PYTHONPATH=/home/ubuntu/llm_token_counter/src"
ExecStart=/home/ubuntu/llm_token_counter/venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 7860 --workers 2
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
