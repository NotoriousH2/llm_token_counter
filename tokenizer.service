[Unit]
Description=LLM Token Counter Gradio Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/llm_token_counter
Environment="PATH=/home/ubuntu/llm_token_counter/venv/bin"
ExecStart=/home/ubuntu/llm_token_counter/venv/bin/python src/server.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
